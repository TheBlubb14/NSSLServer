<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LitGit" Version="0.2.0.18-alpha">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="5.0.0-rc.1.20451.17" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="NLog" Version="4.7.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\NSSLServer.Shared\NSSLServer.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Database\" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="NSSLServer.Core.Nuget.props.template" />
    <LitGitTemplateReference Include="NSSLServer.Core.Nuget.props.template" />

    <None Update="NSSLServer.Core.Nuget.props" Condition="Exists('NSSLServer.Core.Nuget.props')">
      <DependentUpon>NSSLServer.Core.Nuget.props.template</DependentUpon>
    </None>

  </ItemGroup>
  <Import Project="NSSLServer.Core.Nuget.props" Condition="Exists('NSSLServer.Core.Nuget.props')" />

</Project>
